<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
      prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="de.alexbleicher.kartenspiel.gui.KartenspielGUIController">
    <children>
        <HBox prefHeight="100.0" prefWidth="446.0">
            <children>
                <Label prefHeight="58.0" prefWidth="109.0" text="Rome">
                    <font>
                        <Font size="40.0"/>
                    </font>
                </Label>
            </children>
            <padding>
                <Insets left="250.0"/>
            </padding>
        </HBox>
        <HBox prefHeight="100.0" prefWidth="200.0">
            <children>
                <Button fx:id="bDraw" mnemonicParsing="false" onAction="#drawCard" text="Karte ziehen">
                    <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </HBox.margin>
                </Button>
                <Button fx:id="bShowHand" mnemonicParsing="false" onAction="#showHand" text="Hand zeigen">
                    <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </HBox.margin>
                </Button>
                <Button fx:id="bDiscard" mnemonicParsing="false" onAction="#discardCard" text="Karte ablegen">
                    <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                    </HBox.margin>
                </Button>
            </children>
        </HBox>
        <VBox prefHeight="287.0" prefWidth="600.0">
            <children>
                <TextField fx:id="tfPlayer3" prefHeight="54.0" prefWidth="200.0">
                    <VBox.margin>
                        <Insets bottom="10.0" left="200.0" right="200.0"/>
                    </VBox.margin>
                </TextField>
                <HBox prefHeight="100.0" prefWidth="200.0">
                    <children>
                        <TextField fx:id="tfPlayer2" prefHeight="68.0" prefWidth="168.0">
                            <HBox.margin>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                            </HBox.margin>
                        </TextField>
                        <TextArea fx:id="tfDiscardPile" prefHeight="200.0" prefWidth="200.0"
                                  text="Letzte aufgedeckte Karte:">
                            <HBox.margin>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                            </HBox.margin>
                        </TextArea>
                        <TextField fx:id="tfPlayer4" prefHeight="62.0" prefWidth="167.0">
                            <HBox.margin>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                            </HBox.margin>
                        </TextField>
                    </children>
                </HBox>
                <TextField fx:id="tfPlayer1" prefHeight="75.0" prefWidth="200.0">
                    <VBox.margin>
                        <Insets bottom="100.0" left="200.0" right="200.0" top="10.0"/>
                    </VBox.margin>
                </TextField>
                <HBox prefHeight="92.0" prefWidth="600.0">
                    <children>
                        <Label fx:id="lOutput">
                            <HBox.margin>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                            </HBox.margin>
                        </Label>
                        <Button fx:id="bEndRound" mnemonicParsing="false" text="Zug Beenden">
                            <HBox.margin>
                                <Insets left="250.0"/>
                            </HBox.margin>
                        </Button>
                    </children>
                </HBox>
            </children>
        </VBox>
    </children>
</VBox>
